<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PiOverviewActivity">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_pi_overview" android:id="@+id/include"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_Sensor"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_add"
            app:layout_anchor="@+id/include" android:layout_marginTop="@dimen/fab_margin"
            app:borderWidth="0dp"
            app:useCompatPadding="true"
            android:layout_marginStart="@dimen/fab_margin" android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin" app:fabSize="normal"
            android:backgroundTint="#009688" app:backgroundTint="@color/colorPrimaryDark"/>

</RelativeLayout>